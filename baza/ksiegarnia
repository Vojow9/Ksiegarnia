-- Database: Ksiegarnia

-- DROP DATABASE "Ksiegarnia";

CREATE DATABASE "Ksiegarnia"
    WITH 
    OWNER = postgres
    ENCODING = 'UTF8'
    LC_COLLATE = 'Polish_Poland.1250'
    LC_CTYPE = 'Polish_Poland.1250'
    TABLESPACE = pg_default
    CONNECTION LIMIT = -1;
 
-- Create

    create table User
    id int IDENTITY(1,1) primary key not null; 
    name varchar(20) not null;
    password varchar(20) not null;
    
    create table Book
    id int primary key not null; 
    name varchar(20) not null;
    firstNameofAuthor varchar(20);
   	lastNameofAuthor varchar(20);
    listOfInterest varchar;
    cover varchar;
    quanity int;
    status bit;
    
-- Insert

	insert into User
    values ('wojtek99999','a12345')
    insert into User
    values ('Way of Kings','Brandon','Sanderson','1.,2.,3.,4.','http',20,1)
    